<UserControl x:Class="SlangClient.Controls.SlangToolsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlangClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="0,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ToolBar x:Name="toolBar" Height="41" VerticalAlignment="Center">
                <Button Content="Click me">
                </Button>
            </ToolBar>
            <StatusBar Grid.Row="2">
                <StatusBarItem Content="StatusBarItem" Height="23" VerticalAlignment="Center"/>
            </StatusBar>
            <TextBox x:Name="textBox1" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
        </Grid>

    </Grid>
</UserControl>
